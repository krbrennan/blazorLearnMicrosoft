    }

    public void createTask()
    {
        // var newTodo = new ToDoItem();
        // newTodo.Title = task;
        // todos.Add(newTodo);
        // task = "";
        var newTodo = new ToDoItem
            {
                Title = task
            };
        todos.Add(newTodo);
        task = "";
